<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<fx:root minHeight="800.0" minWidth="800.0" onCloseRequest="#handleExit" title="Word Bank"
  type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.3-internal"
  xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png"/>
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css"/>
        <URL value="@Extensions.css"/>
      </stylesheets>

      <VBox prefHeight="163.0" prefWidth="340.0">
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp"
              text="Help"/>
          </Menu>
          <Menu mnemonicParsing="false" text="Deck">
            <items>
              <MenuItem fx:id="Deck1" mnemonicParsing="false" onAction="#handleDeck" text="Deck 1"/>
              <MenuItem fx:id="Deck2" mnemonicParsing="false" onAction="#handleDeck" text="Deck 2"/>
            </items>
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5"/>
          </padding>
        </StackPane>


        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100.0"
          prefHeight="100.0" styleClass="pane-with-border" VBox.vgrow="NEVER">

          <padding>
            <Insets bottom="5" left="10" right="10" top="5"/>
          </padding>
        </StackPane>
        <GridPane gridLinesVisible="true" VBox.vgrow="ALWAYS">
          <StackPane fx:id="deckListPanelPlaceholder" GridPane.columnIndex="0"
            GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS"/>
          <StackPane fx:id="entryListPanelPlaceholder"
            GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"
            GridPane.vgrow="ALWAYS"/>
          <columnConstraints>
            <ColumnConstraints percentWidth="30.0" minWidth="300"/>
            <ColumnConstraints percentWidth="80.0"/>
          </columnConstraints>
          <rowConstraints>
            <RowConstraints/>
          </rowConstraints>
        </GridPane>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER"/>
      </VBox>
    </Scene>
  </scene>
</fx:root>
